{
  "compilerOptions": {
    "noEmit": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["@types/node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowImportingTsExtensions": true
  },
  "include": ["packages"],
  "exclude": ["node_modules", "dist"]
}
